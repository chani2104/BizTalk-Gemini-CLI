{
  "version": 2,
  "builds": [
    {
      "src": "backend/app.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/convert",
      "dest": "backend/app.py"
    },
    {
      "src": "/",
      "dest": "frontend/index.html"
    },
    {
      "src": "/js/(.*)",
      "dest": "/frontend/js/$1"     
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]   
}